    <stylesheets>
        <URL value="@../styles/application.css" />
    </stylesheets>
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" text="Dein Player-Tag">
            <font>
                <Font name="Dubai Regular" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="searchField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="48.0" prefWidth="426.0" promptText="Player-Tag (z. B. #J2VLG8UOP)">
            <font> <Font name="Dubai Regular" /> </font>
        </TextField>
      <Button fx:id="searchButton" mnemonicParsing="false" text="Suchen" />
    </children>
</VBox>
